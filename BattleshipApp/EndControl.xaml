<UserControl x:Class="BattleshipApp.EndControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleshipApp"
             mc:Ignorable="d" 
            DataContext="{Binding End, Source={StaticResource Locator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Margin="100,125,100,0" TextWrapping="Wrap" Text="{Binding Message}" VerticalAlignment="Top" TextAlignment="Center" Foreground="White" FontSize="36"/>
        <Button Command="{Binding QuitApp}" Foreground="White" FontSize="18" Content="Zakończ grę" Background="#2290A3" BorderThickness="0" Margin="250,209,250,180"/>

    </Grid>
</UserControl>
