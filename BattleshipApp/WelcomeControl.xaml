<UserControl x:Class="BattleshipApp.WelcomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleshipApp"
             mc:Ignorable="d" 
            DataContext="{Binding Welcome, Source={StaticResource Locator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Margin="180,10,180,0" TextWrapping="Wrap" Text="Witamy w BattleshipWPF!" VerticalAlignment="Top" TextAlignment="Center" Foreground="White" FontSize="36"/>
        <Button Command="{Binding StartBattleButtonCommand}" Foreground="White" FontSize="18" Content="Rozpocznij bitwę" Background="#2290A3" BorderThickness="0" Margin="256,120,256,269"/>

    </Grid>
</UserControl>
